void setup() {
  Serial.begin(115200);

  // Initialize I2C communication
  Wire.begin(D7, D5); // SDA, SCL

  // Initialize the OLED display
  if (!display.begin(SSD1306_SWITCHCAPVCC, SCREEN_ADDRESS)) {
    Serial.println(F("SSD1306 allocation failed"));
    for (;;); // Loop forever if OLED fails to initialize
  }

  // Clear the buffer
  display.clearDisplay();
  
  // Draw the bitmap from the icon
  showIcon();

  // Display the buffer
  display.display();
  delay(2000);
}

void loop() {
}

void showIcon() {
  display.drawBitmap(0, 0, lightMasterIcon, SCREEN_WIDTH, SCREEN_HEIGHT, WHITE);
}
